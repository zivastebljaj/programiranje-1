    "version": "2.0.0",
    "tasks": [
        {
            "label": "run file in Python",
            "type": "shell",
            "command": "ipython",
            "args": [
                "-i",
                {
                    "value": "${file}",
                    "quoting": "escape"
                }
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}